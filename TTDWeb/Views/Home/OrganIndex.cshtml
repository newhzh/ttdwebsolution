@model  TTDWeb.Models.OrganPage
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.OrganName — 天天贷</title>
    <script src="~/content/js/jquery1.3.2.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="~/content/css/css.css">
    <link href="~/content/css/SearchHome1.css" rel="stylesheet" type="text/css">
    <script src="~/content/js/jquery-1.7.1.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".productup h1").toggle(function () {
                $(this).html("收起详情");
                $(this).next(".container").animate({ height: 268, }, "slow");
            }, function () {
                $(this).html("展开详情");
                $(this).next(".container").animate({ height: 0 }, "slow");
            });
        });


    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            /*$('.ct:gt(0)').hide();*/
            var hdw = $('.tab_title li');
            hdw.click(function () {
                $(this).addClass('one').siblings().removeClass();
                var hdw_index = hdw.index(this);
                $('.ct').eq(hdw.index(this)).show().siblings().hide();
            });
        });
    </script>
    <script>
        !window.jQuery && document.write('<script src="~/content/js/jquery-1.4.3.min.js"><\/script>');
    </script>
    <script type="text/javascript" src="~/fancybox/jquery.mousewheel-3.0.4.pack.js"></script>
    <script type="text/javascript" src="~/fancybox/jquery.fancybox-1.3.4.pack.js"></script>
    <link rel="stylesheet" type="text/css" href="~/fancybox/jquery.fancybox-1.3.4.css" media="screen" />
    <script type="text/javascript">
        $(document).ready(function () {

            $("a#various3").fancybox({
                'width': 670,
                'height': 560,
                'autoScale': true,
                'transitionIn': 'none',
                'transitionOut': 'none',
                'type': 'iframe',
                'overlayColor': '#000',
                'overlayOpacity': 0.7,
                'scrolling': 'no',
                'padding': 0,

            });

        });
    </script>
    <script src="~/content/js/scrolltop.js" type="text/javascript"></script>
</head>
<body>
    <div style="background: url(../content/images/topbg.png) repeat; width: 100%; height: 22px;">
        <div class="denglu" style="width: 950px;">客服热线：400-0000-000<a href="@Url.Action("Reg", "Account")" style="margin-right:10px; margin-left:35px;">注册</a>|<a href="@Url.Action("Login", "Account")" style="margin-left:10px;">信贷经理登录</a></div>
    </div>

    <div class="bodycontent" style="padding-top: 11px; color: #282828; min-height: 1150px;">
        <img src="../content/images/logo.png" width="183" height="53" />
        <div style="clear: both; height: 15px;"></div>
        <div class="agrncyhead">
            <div class="headpic">
                <img src="@Model.OrganLogo" width="128" height="128" />
            </div>
        </div>
        <div class="intro" style="height:auto;">
            <span style="font-size: 24px; margin-right: 40px;">@Model.OrganName</span>@Model.OrganType<br />
            <div style="height: 15px;"></div>
            @Model.Memo
        </div>
        <div class="agrncyleft">
            <div class="product" style="width: 595px; margin: 0; height: 60px; margin-bottom: 15px;">
                <div style="line-height: 30px; text-align: center; float: left; width: 180px;">
                    为您提供贷款产品<br />
                    <span style="font-size: 24px; color: #fbb03f;">20</span>款
                </div>
                <div style="line-height: 30px; text-align: center; float: left; width: 180px;">
                    已成功受理贷款<br />
                    <span style="font-size: 24px; color: #fbb03f;">@Model.HandledCount</span>人
                </div>
                <div style="line-height: 30px; text-align: center; float: left; width: 180px;">
                    信用评级<br />
                    <div style="height: 5px;"></div>
                    <img src="../content/images/star1.png" width="28" height="22" />
                    <img src="../content/images/star2.png" width="28" height="22" />
                    <img src="../content/images/star2.png" width="28" height="22" />
                    <img src="../content/images/star2.png" width="28" height="22" />
                    <img src="../content/images/star2.png" width="28" height="22" />
                </div>
            </div>
            @foreach (var itemProduct in Model.ProductList)
            {
                <!--list start-->
                <div class="productup changewith" style="background: url(../content/images/bglist1.png) left top no-repeat;">
                    <div style="float: left; width: 280px;">
                        <img src="@itemProduct.OrganLogo" width="46" height="46" style="float: left; margin-right: 20px;" /><span style="line-height: 30px;">@itemProduct.ProductName</span><br />
                        <span style="font-size: 12px;">@itemProduct.OrganName</span>
                    </div>
                    <div style="float: left; text-align: center; width: 130px; padding-top: 10px;">
                        <span style="font-size: 12px;">@itemProduct.AnnualRateDisplay APR年化利率<br />
                            @itemProduct.RepaymentMonthly 分期付款</span>
                    </div>
                    <h1 class="look">展开详情</h1>
                    <div class="container changewith" style="margin-left: 0px;">

                        <!--tabs start-->
                        <div class="mytabs" style="width: 550px;">
                            <ul class="tab_title" style="width: 420px;">
                                <li class="one" style="margin-left: 10px; margin-right: 10px;">产品详情</li>
                                <li style="margin-left: 10px; margin-right: 10px;">申请条件</li>
                                <li style="margin-left: 10px; margin-right: 10px;">所需材料</li>
                                <li style="margin-left: 10px; margin-right: 10px;">详细说明</li>
                                <li style="margin-left: 10px; margin-right: 10px;">产品经理</li>
                            </ul>
                            <div class="content" style="width: 550px;">
                                <div class="ct">
                                    @itemProduct.Details
                                </div>
                                <div class="ct" style="display: none">
                                    @itemProduct.ApplyCondition
                                </div>
                                <div class="ct" style="display: none">
                                    @itemProduct.RequiredFile
                                </div>
                                <div class="ct" style="display: none">
                                    @itemProduct.Memo
                                </div>
                                <div class="ct" style="display: none">
                                    @foreach (var itemCustom in itemProduct.Customs)
                                    {
                                        <div>
                                            <strong>@itemCustom.CustomName</strong><br />
                                            @itemCustom.OrganName&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@itemCustom.OrganID<br />

                                        </div>
                                    }



                                </div>
                            </div>
                        </div>
                        <!--tabs end-->
                        <div class="apply2">
                            @if (itemProduct.ProductType == "0")
                            {
                                <a id="various3" href="@Url.Action("Carloan1", "Home", new { productcode = @itemProduct.ProductCode, producttype = @itemProduct.ProductType })">我要申请</a>
                            }
                            else if (itemProduct.ProductType == "1")
                            { 
                                <a id="various3" href="@Url.Action("Homeloan1", "Home", new { productcode = @itemProduct.ProductCode, producttype = @itemProduct.ProductType })">我要申请</a>
                            }
                            else if (itemProduct.ProductType == "2")
                            { 
                                <a id="various3" href="@Url.Action("Firmloan1", "Home", new { productcode = @itemProduct.ProductCode, producttype = @itemProduct.ProductType })">我要申请</a>
                            }
                            else if (itemProduct.ProductType == "3")
                            { 
                                <a id="various3" href="@Url.Action("Purchaseloan1", "Home", new { productcode = @itemProduct.ProductCode, producttype = @itemProduct.ProductType })">我要申请</a>
                            }
                        </div>
                    </div>
                    <!--container end-->
                </div>
                <div class="productdown changewith" style="font-size: 12px; line-height: 25px; width: 596px;">
                    <div style="float: left; margin-right: 30px;">贷款速度快</div>
                    <div style="float: left; margin-right: 30px;">贷款速度快</div>
                    <div style="float: left; margin-right: 30px;">贷款速度快</div>
                    <div style="float: left; margin-right: 30px;">贷款速度快</div>
                </div>
                <!--list end-->
            }

        </div>

        <div class="agrncyright">
            <div style="background-color: #5489d2; color: #FFF; padding-left: 20px; padding-bottom: 20px; margin-bottom: 15px;">
                <br />
                机构服务电话：<br />
                <div style="font-size: 24px; text-align: center; width: 280px;">@Model.Tel</div>
            </div>
            <div>
                @using (Html.BeginForm("productlist", "Home", FormMethod.Get))
                {   
                    <!--form start-->
                    <div class="vsearchBox">
                        <div style="padding: 15px; margin-bottom: 15px; border-bottom: 1px solid #e1e1e1">我要贷款</div>
                        <div id="searchBox" class="vboxcontent">

                            <dl class="searchitems clearfix typesdl">
                                <dt>
                                    <label>贷款用途：</label>
                                </dt>
                                <dd class="selectDD zindex4">
                                    <input class="search_input" value="购房贷款" name="type1" type="text" data-val="index" data-dw="" readonly="readonly">
                                    <input type="hidden" value="1" name="type" id="type" />
                                    <div class="sidw"></div>
                                    <div class="search_btn search_btn_bg2"></div>
                                    <ul class="search_ul" style="display: none;">
                                        <!-- <li data-txt="不限" data-val="null" data-dw="" class="liover">不限</li> -->
                                        <li data-txt="企业贷款" data-val="firm" data-dw="" onclick="document.getElementById('type').value=2">企业贷款</li>
                                        <li data-txt="购车贷款" data-val="car" data-dw="" onclick="document.getElementById('type').value=0">购车贷款</li>
                                        <li data-txt="购房贷款" data-val="home" data-dw="" onclick="document.getElementById('type').value=1">购房贷款</li>
                                        <li data-txt="消费贷款" data-val="purchase" data-dw="" onclick="document.getElementById('type').value=3">消费贷款</li>
                                        <li data-txt="购车保险" data-val="car1" data-dw="" onclick="document.getElementById('type').value=5">购车保险</li>
                                        <li data-txt="信用卡" data-val="credit" data-dw="" onclick="document.getElementById('type').value=4">信用卡</li>
                                    </ul>
                                </dd>
                            </dl>
                            <dl class="searchitems clearfix moneydl">
                                <dt>
                                    <label>贷款金额：</label>
                                </dt>
                                <dd class="selectDD zindex3">
                                    <input class="search_input" value="10" name="money" type="text" maxlength="6" data-type="numDot" data-val="10" data-dw="万元">
                                    <div class="sidw">万元</div>
                                    <div class="search_btn search_btn_bg2"></div>
                                    <ul class="search_ul" style="display: none;">
                                        <li data-txt="3" data-val="3" data-dw="万元" class="">3万元</li>
                                        <li data-txt="5" data-val="5" data-dw="万元" class="">5万元</li>
                                        <li data-txt="10" data-val="10" data-dw="万元" class="liover">10万元</li>
                                        <li data-txt="15" data-val="15" data-dw="万元">15万元</li>
                                        <li data-txt="20" data-val="20" data-dw="万元">20万元</li>
                                        <li data-txt="25" data-val="25" data-dw="万元">25万元</li>
                                        <li data-txt="30" data-val="30" data-dw="万元">30万元</li>
                                    </ul>
                                </dd>
                            </dl>
                            <dl class="searchitems clearfix timedl">
                                <dt>
                                    <label>贷款期限：</label>
                                </dt>
                                <dd class="selectDD zindex2">
                                    <input class="search_input" name="term1" value="1" type="text" maxlength="6" data-type="num" data-val="1" data-dw="年">
                                    <input type="hidden" value="12" id="term" name="term" />
                                    <div class="sidw">年</div>
                                    <div class="search_btn search_btn_bg2"></div>
                                    <ul class="search_ul" style="display: none;">
                                        <li data-txt="3" data-val="3" data-dw="个月" onclick="document.getElementById('term').value=3">3个月</li>
                                        <li data-txt="6" data-val="6" data-dw="个月" onclick="document.getElementById('term').value=6">6个月</li>
                                        <li data-txt="1" data-val="1" data-dw="年" onclick="document.getElementById('term').value=12">1年</li>
                                        <li data-txt="18" data-val="18" data-dw="个月" onclick="document.getElementById('term').value=18">18个月</li>
                                        <li data-txt="2" data-val="2" data-dw="年" onclick="document.getElementById('term').value=24">2年</li>
                                        <li data-txt="3" data-val="3" data-dw="年" onclick="document.getElementById('term').value=36">3年</li>
                                        <li data-txt="5" data-val="5" data-dw="年" onclick="document.getElementById('term').value=60">5年</li>
                                        <li data-txt="10" data-val="10" data-dw="年" onclick="document.getElementById('term').value=120">10年</li>
                                    </ul>
                                </dd>
                            </dl>
                            <button type="submit" class="btn" style="width: 282px; margin-top: 20px; font-size: 14px;">马上搜索</button>

                        </div>
                        <script type="text/javascript">
                            jQuery(function () {
                                jQuery('#searchBox').dkSearch({
                                });
                            });
                        </script>
                        <script src="~/content/js/jquery.searchBox.js" type="text/javascript"></script>
                    </div>
                    <!--form end--> 
                }
            </div>
        </div>
    </div>
    <!--body content-->
    <div class="pagenumber" style="margin: 0 auto; width: 950px; margin-bottom: 30px;"><a class="number" href="#">上一页</a> <a class="numberclick" href="#">1</a> <a class="number" href="#">2</a> ... <a class="number" href="#">9</a> <a class="number" href="#">10</a> <a class="number" href="#">下一页</a> </div>

    <div class="footer" style="margin: 0 auto; width: 950px;">
        <a href="#">关于我们</a><a href="#">联系我们</a><a href="#">加入我们</a><a href="#">意见反馈</a><a href="#">服务条款</a><br />
        ©2014 杭州天代宝投资管理有限公司 浙ICP备13008014号-1
    </div>
    <div class="go-top">
        <a id="various3" href="productlist.html">
            <div class="feedback"></div>
        </a>
        <div class="gotop"></div>
    </div>
</body>
</html>
