<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>天天贷 - 金融信息服务平台</title>
    <link rel="stylesheet" type="text/css" href="~/content/css/css.css">
    <link href="~/content/css/SearchHome.css" rel="stylesheet" type="text/css">
    <script src="~/content/js/jquery-1.7.1.js" type="text/javascript"></script>
    <script src="~/content/js/share.js" type="text/javascript"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $("#typewrap2").css({ "background": "url(../content/images/button_1.png) no-repeat", "color": "#fff" })
            $(".typewrap2").click(function () {
                $(this).css({ "background": "url(../content/images/button_1.png) no-repeat", "color": "#fff" }).siblings().css({ "background": "url(../content/images/button_2.png) no-repeat", "color": "#fff" });

            });


        });
    </script>
    <style type="text/css">
        body
        {
            overflow: hidden;
            background-image: none;
        }

        .bg
        {
            position: absolute;
            width: 100%;
            height: 100%;
            background-image: url(../content/images/bg.jpg);
            background-size: cover;
            top: 0;
            left: 0;
            z-index: -1;
        }
    </style>
</head>
<body>
    <div class="bg"></div>
    <div style="background: url(../content/images/topbg.png) repeat; width: 100%; height: 22px;">
        <div class="denglu"><a href="#" style="margin-right: 10px;">随便逛逛</a>|<a href="@Url.Action("Login", "Account")" style="margin-left:10px;">信贷经理登录</a></div>
    </div>
    <div class="bodycontent" style="text-align: center; padding-top: 27px; width: 700px; height: 330px; min-height: 0">
        <div style="top: 50%; margin-top: -200px; position: absolute; width: 690px;">
            <img src="../content/images/logo.png" width="183" height="53" style="margin-bottom: 23px;" /><br />

            <div class="typewrap">
                <div class="typewrap2" onclick="document.getElementById('type').value=1" id="typewrap2">
                    <div class="type">
                        <img src="../content/images/house.png" width="47" height="39" /><br />
                        &nbsp;购房贷款
                    </div>
                </div>
                <div class="typewrap2" onclick="document.getElementById('type').value=0">
                    <div class="type">
                        <img src="../content/images/car.png" width="47" height="39" /><br />
                        &nbsp;购车贷款
                    </div>
                </div>
                <div class="typewrap2" onclick="document.getElementById('type').value=2">
                    <div class="type">
                        <img src="../content/images/factory.png" width="47" height="39" /><br />
                        &nbsp;企业贷款
                    </div>
                </div>
                <div class="typewrap2" onclick="document.getElementById('type').value=3">
                    <div class="type">
                        <img src="../content/images/buy.png" width="47" height="39" /><br />
                        &nbsp;消费贷款
                    </div>
                </div>
                <div class="typewrap2" onclick="document.getElementById('type').value=5">
                    <div class="type">
                        <img src="../content/images/car1.png" width="47" height="39" /><br />
                        &nbsp;购车保险
                    </div>
                </div>
                <div class="typewrap2" onclick="document.getElementById('type').value=4">
                    <div class="type">
                        <img src="../content/images/credit.png" width="47" height="39" /><br />
                        &nbsp;信用卡
                    </div>
                </div>
            </div>


            <!--form start-->
            <div class="vsearchBox">
                <div id="searchBox" class="vboxcontent">
                    @using (Html.BeginForm("productlist", "Home", FormMethod.Get))
                    {
                        <input type="hidden" value="1" id="type" name="type" />
                        <dl class="searchitems clearfix moneydl" style="position: absolute; top: 265px; margin-left: 40px;">
                            <dt>
                                <label>贷款金额：</label>
                            </dt>
                            <dd class="selectDD zindex3">
                                <input class="search_input" name="money" id="money" type="text" maxlength="6" data-type="numDot" data-val="10" data-dw="万元" value="10">
                                <div class="sidw">万元</div>
                                <div class="search_btn search_btn_bg2"></div>
                                <ul class="search_ul" style="display: none;">
                                    <li data-txt="3" data-val="3" data-dw="万元" class="">3万元</li>
                                    <li data-txt="5" data-val="5" data-dw="万元" class="">5万元</li>
                                    <li data-txt="10" data-val="10" data-dw="万元" class="liover">10万元</li>
                                    <li data-txt="15" data-val="15" data-dw="万元">15万元</li>
                                    <li data-txt="20" data-val="20" data-dw="万元">20万元</li>
                                    <li data-txt="25" data-val="25" data-dw="万元">25万元</li>
                                    <li data-txt="30" data-val="30" data-dw="万元">30万元</li>
                                </ul>
                            </dd>
                        </dl>
                        <dl class="searchitems clearfix timedl" style="position: absolute; top: 265px; margin-left: 280px;">
                            <dt>
                                <label>贷款期限：</label>
                            </dt>
                            <dd class="selectDD zindex2">
                                <input class="search_input" name="term1" id="term1" type="text" maxlength="6" data-type="num" data-val="1" data-dw="年" value="1">
                                <input type="hidden" value="12" id="term" name="term" />
                                <div class="sidw">年</div>
                                <div class="search_btn search_btn_bg2"></div>
                                <ul class="search_ul" style="display: none;">
                                    <li data-txt="3" data-val="3" data-dw="个月" onclick="document.getElementById('term').value=3">3个月</li>
                                    <li data-txt="6" data-val="6" data-dw="个月" onclick="document.getElementById('term').value=6">6个月</li>
                                    <li data-txt="1" data-val="1" data-dw="年" onclick="document.getElementById('term').value=12">1年</li>
                                    <li data-txt="18" data-val="18" data-dw="个月" onclick="document.getElementById('term').value=18">18个月</li>
                                    <li data-txt="2" data-val="2" data-dw="年" onclick="document.getElementById('term').value=24">2年</li>
                                    <li data-txt="3" data-val="3" data-dw="年" onclick="document.getElementById('term').value=36">3年</li>
                                    <li data-txt="5" data-val="5" data-dw="年" onclick="document.getElementById('term').value=60">5年</li>
                                    <li data-txt="10" data-val="10" data-dw="年" onclick="document.getElementById('term').value=120">10年</li>
                                </ul>
                            </dd>
                        </dl>
                        <button type="submit" class="btn" style="width: 130px; position: absolute; top: 291px; margin-left: -170px;">马上搜索</button>
                    }
                </div>
                <script type="text/javascript">
                    jQuery(function () {
                        jQuery('#searchBox').dkSearch({
                        });
                    });
                </script>
                <script src="~/content/js/jquery.searchBox.js" type="text/javascript"></script>
            </div>
            <!--form end-->
        </div>
        <div class="footer1">
            <a href="#">关于我们</a><a href="#">联系我们</a><a href="#">加入我们</a><a href="#">服务条款</a><br />
            ©2014 杭州天代宝投资管理有限公司 浙ICP备13008014号-1
        </div>

    </div>



