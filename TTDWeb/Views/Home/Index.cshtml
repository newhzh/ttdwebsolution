        <!--form start-->
        <div class="vsearchBox">
            <div id="searchBox" class="vboxcontent">
                 @using (Html.BeginForm("productlist", "Home",FormMethod.Get))
                 {
                    <input type="hidden" value="1" id="type" name="type" />
                    <dl class="searchitems clearfix moneydl" style="position: absolute; top: 560px; margin-left: 50px;">
                        <dt>
                            <label>贷款金额：</label>
                        </dt>
                        <dd class="selectDD zindex3">
                            <input class="search_input" name="money" type="text" maxlength="6" data-type="numDot" data-val="10" data-dw="万元" value="10">
                            <div class="sidw">万元</div>
                            <div class="search_btn search_btn_bg2"></div>
                            <ul class="search_ul" style="display: none;">
                                <li data-txt="3" data-val="3" data-dw="万元" class="">3万元</li>
                                <li data-txt="5" data-val="5" data-dw="万元" class="">5万元</li>
                                <li data-txt="10" data-val="10" data-dw="万元" class="liover">10万元</li>
                                <li data-txt="15" data-val="15" data-dw="万元">15万元</li>
                                <li data-txt="20" data-val="20" data-dw="万元">20万元</li>
                                <li data-txt="25" data-val="25" data-dw="万元">25万元</li>
                                <li data-txt="30" data-val="30" data-dw="万元">30万元</li>
                            </ul>
                        </dd>
                    </dl>
                    <dl class="searchitems clearfix timedl" style="position: absolute; top: 560px; margin-left: 395px;">
                        <dt>
                            <label>贷款期限：</label>
                        </dt>
                        <dd class="selectDD zindex2">
                            <input class="search_input" name="time" type="text" maxlength="6" data-type="num" data-val="1" data-dw="年" value="1">
                            <div class="sidw">年</div>
                            <div class="search_btn search_btn_bg2"></div>
                            <ul class="search_ul" style="display: none;">
                                <li data-txt="3" data-val="3" data-dw="个月">3个月</li>
                                <li data-txt="6" data-val="6" data-dw="个月">6个月</li>
                                <li data-txt="1" data-val="1" data-dw="年">1年</li>
                                <li data-txt="18" data-val="18" data-dw="个月">18个月</li>
                                <li data-txt="2" data-val="2" data-dw="年">2年</li>
                                <li data-txt="3" data-val="3" data-dw="年">3年</li>
                                <li data-txt="5" data-val="5" data-dw="年">5年</li>
                                <li data-txt="10" data-val="10" data-dw="年">10年</li>
                            </ul>
                        </dd>
                    </dl>
                    <button  type="submit" class="btn" style="width: 152px; position: absolute; top: 586px; margin-left: -200px;">马上搜索</button>
                 }
            </div>
            <script type="text/javascript">
                jQuery(function () {
                    jQuery('#searchBox').dkSearch({
                    });
                });
            </script>
            <script src="~/content/js/jquery.searchBox.js" type="text/javascript"></script>
